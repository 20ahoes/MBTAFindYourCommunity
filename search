<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Town Search Widget</title>
  <style>
    body {
      font-family: Roboto, sans-serif;
      margin: 10px;
    }
    input, button {
      font-size: 16px;
      padding: 6px 10px;
      margin-right: 6px;
    }
  </style>
</head>
<body>
  <input type="text" id="townName" placeholder="Enter town name..." />
  <button onclick="sendTown()">Search</button>

  <script>
    function sendTown() {
      const town = document.getElementById("townName").value.trim().toLowerCase();
      const mapIframe = parent.document.getElementById("mapboxFrame");
      if (mapIframe && mapIframe.contentWindow) {
        console.log("üì§ Sending search-town message:", town);
        mapIframe.contentWindow.postMessage({
          type: 'search-town',
          name: town
        }, '*');
      } else {
        console.warn("‚ùå Map iframe not found.");
      }
    }
  </script>
</body>
</html>
